<div id="weather-modal" class="modal" aria-modal="true" role="dialog" aria-labelledby="weather-title">
  <div class="modal-content weather-modal">
    <a href="#" class="modal-close" aria-label="Close">×</a>
    <h2 id="weather-title">Weather Information</h2>

    <div class="weather-info">
      <div class="weather-card">
        <div>Temperature</div>
        <div id="weather-temp" class="weather-value" aria-live="polite">—</div>
      </div>

      <div class="weather-card">
        <div>Condition</div>
        <div id="weather-condition" class="weather-value" aria-live="polite">—</div>
      </div>

      <div class="weather-card">
        <div>Humidity</div>
        <div id="weather-humidity" class="weather-value" aria-live="polite">—</div>
      </div>

      <div class="weather-card">
        <div>Wind Speed</div>
        <div id="weather-wind" class="weather-value" aria-live="polite">—</div>
      </div>
    </div>
  </div>
</div>
